{
  "name": "codefirst",
  "version": "1.0.0",
  "description": "Code First website",
  "main": "index.js",
  "scripts": {
    "dev": "webpack-dev-server --port 5020 --mode development --open",
    "build": "webpack --mode production",
    "webpack-test": "webpack",
    "watch:sass": "node-sass sass/main.scss src/assets/css/style.css -w",
    "devserver": "live-server",
    "devserver-localhost": "live-server --host=localhost",
    "devserver-mobile": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "start-mobile": "npm-run-all --parallel devserver-mobile watch:sass",
    "start-localhost": "npm-run-all --parallel devserver-localhost watch:sass",
    "compile:sass": "node-sass sass/main.scss assets/css/style.comp.css",
    "concat:css": "concat -o assets/css/style.concat.css assets/css/icon-font.css assets/css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' assets/css/style.concat.css -o assets/css/style.prefix.css",
    "compress:css": "node-sass assets/css/style.prefix.css assets/css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "author": "Jonas",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "concat": "^1.0.3",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.1.0",
    "express": "^4.16.4",
    "file-loader": "^3.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1",
    "sass-loader": "^7.1.0",
    "script-loader": "^0.7.2",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.2.0",
    "webpack-dev-server": "^3.1.14"
  }
}
